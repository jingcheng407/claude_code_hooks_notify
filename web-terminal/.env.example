# Server Configuration
NODE_ENV=development
PORT=3000

# Authentication
ADMIN_PASSWORD=admin123
JWT_SECRET=change-this-secret-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# CORS (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Session & Terminal Configuration
SESSION_IDLE_TIMEOUT=1800000
MAX_TERMINALS_PER_USER=5
MAX_CONCURRENT_USERS=50
TERMINAL_TIMEOUT=7200000
CLEANUP_ON_DISCONNECT=false

# File System
BASE_DIR=/workspace
UPLOAD_MAX_SIZE=10485760
ALLOWED_UPLOAD_TYPES=.txt,.log,.json,.md,.sh,.py,.js,.ts

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Terminal
USE_TMUX=false
DEFAULT_SHELL=/bin/bash

# Performance
BACKPRESSURE_HIGH_WATERMARK=16384
OUTPUT_CHUNK_SIZE=4096

# CDN
USE_CDN=false