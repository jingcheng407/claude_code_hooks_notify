#!/bin/bash
#
# claude-telegram - 启动Claude Code并启用Telegram通知
#
# 这个脚本会：
# 1. 启用Claude Code hooks通知
# 2. 设置Telegram模式为双通道（同时使用Lark和Telegram）
# 3. 启动Claude Code
#

# 启用通知
export CC_HOOKS_NOTIFY=on

# 启用Telegram双通道模式（同时使用Lark和Telegram）
export TELEGRAM_MODE=on

# 启动Claude Code并传递所有参数
echo "🚀 启动Claude Code (Telegram双通道模式)"
echo "📱 通知将同时发送到Lark和Telegram"
echo "📤 单向推送通知"
echo ""

claude "$@"